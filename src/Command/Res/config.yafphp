$modules = function (){
    $dir = APP_PATH.'/modules';
    $modules = scandir($dir);
    $ret=[];
    foreach ($modules as $v){
        if(!is_dir($dir.'/'.$v)){
            continue;
        }
        if( $v!='.' && $v!='..'){
            $ret[]=$v;
        }
    }
    \Yaf\Registry::set('_modules',$ret);
    $ret[]='Index';
    return implode(',',$ret);
};

